<!DOCTYPE html>
<html lang="en">
  <head>
  {{>headerlinks}}
    <title>TrueWeather</title>
  </head>
  <body>
    
  {{>navbar}}

    <!-- main header -->
    <div class="conatiner-fluid main_header">
        <div class="row">
            <!-- left side div   -->
            <div class="col-md-6 col-12 main_header_left">
                <p>Welcome to weather app</p>
                <h1>Get the latest <span class="text_clr">weather</span> info of your city</h1>
                <a href="/weather"><button>check now</button></a>
            </div>
           
            <!-- right side div-->
            <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
              <div class="carousel-inner">
                <div class="carousel-item active">
                  <img class=" w-100" src="images/404.png" alt="First slide">
                </div>
                <div class="carousel-item">
                  <img class=" w-100" src="images/404.png" alt="Second slide">
                </div>
                <div class="carousel-item">
                  <img class=" w-100" src="images/404.png" alt="Third slide">
                </div>
              </div>
              <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
              </a>
              <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
              </a>
            </div>
        
        </div>
        </div>

        <!-- footer code -->
        {{>footer}}
    <script src="https://kit.fontawesome.com/bef4a5b200.js" crossorigin="anonymous"></script>

  </body>
</html>
